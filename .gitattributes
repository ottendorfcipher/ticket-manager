# Auto detect text files and normalize line endings
* text=auto

# Enforce LF for POSIX shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# Keep CRLF for Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Treat common binary assets as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.webp binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.bz2 binary
*.7z binary
*.mp4 binary
*.mov binary
*.mp3 binary
*.wav binary
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary

# Environment files as text (prefer LF)
*.env text eol=lf
